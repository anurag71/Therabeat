<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    tools:context=".UserMoodChoice">

    <TextView
        android:id="@+id/WelcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/MusicChoiceButton"
        app:layout_constraintEnd_toStartOf="@id/TimeOfDayGIF"
        app:layout_constraintStart_toStartOf="@id/MusicChoiceButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/TimeOfDayGIF"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/WelcomeTextView"
        app:layout_constraintEnd_toEndOf="@id/MusicChoiceButton"
        app:layout_constraintStart_toEndOf="@+id/WelcomeTextView"
        app:layout_constraintTop_toTopOf="@+id/WelcomeTextView" />


    <Button
        android:id="@+id/MusicChoiceButton"
        android:layout_width="250dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="5dp"
        android:backgroundTint="#2A86B6"
        android:text="@string/MusicButtonString"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/AboutUsChoiceButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle" />

    <Button
        android:id="@+id/AboutUsChoiceButton"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="5dp"
        android:backgroundTint="#2A86B6"
        android:text="@string/AboutUsButtonString"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/FeedbackChoiceButton"
        app:layout_constraintEnd_toEndOf="@id/MusicChoiceButton"
        app:layout_constraintStart_toStartOf="@id/MusicChoiceButton"
        app:layout_constraintTop_toBottomOf="@+id/MusicChoiceButton"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle" />

    <Button
        android:id="@+id/FeedbackChoiceButton"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="5dp"
        android:backgroundTint="#2A86B6"
        android:text="@string/FeedbackButtonString"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/MusicChoiceButton"
        app:layout_constraintStart_toStartOf="@id/MusicChoiceButton"
        app:layout_constraintTop_toBottomOf="@+id/AboutUsChoiceButton"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle" />


</androidx.constraintlayout.widget.ConstraintLayout>